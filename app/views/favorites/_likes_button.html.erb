  <% if current_user.like?(micropost) %>
    <%= form_with(model: current_user.like.find_by(micropost_id), local: true, method: :delete) do |f| %>
　　　　　　　　　　　　　<!--↓favorite_buttonに定義している-->
      <%= hidden_field_tag :micropost_id %>
      <%= f.submit 'Like', class: 'btn btn-danger btn-block btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.like.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id %>
      <%= f.submit 'Likeing', class: 'btn btn-primary btn-block btn-sm' %>
    <% end %>
  <% end %>